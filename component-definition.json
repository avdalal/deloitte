                    }
                },
                {
                    "title": "כרטיסים",
                    "id": "cards",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block",
                                "template": {
                                    "name": "כרטיסים",
                                    "filter": "cards"
                                }
                            }
                        }
                    }
                },
                {
                    "title": "כרטיס",
                    "id": "card",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block/item",
                                "template": {
                                    "name": "כרטיס",
                                    "model": "card"
                                }
                            }
                        }
                    }
                },
                {
                    "title": "טיזר",
                    "id": "teaser",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block",
                                "template": {
                                    "name": "טיזר",
                                    "model": "teaser",
                                    "foreground_title": "טיזר חדש",
                                    "foreground_description": "h2"
