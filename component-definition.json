                {
                    "title": "פריט קרוסלה",
                    "id": "carouselItem",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block/item",
                                "template": {
                                    "name": "פריט קרוסלה",
                                    "model": "carouselItem"
