                            }
                        }
                    }
                },
                {
                    "title": "דירוג",
                    "id": "rating",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block",
                                "template": {
                                    "name": "דירוג",
                                    "model": "rating",
                                    "ratingValue": "2",
                                    "ratingColor": "gold"
                                }
                            }
                        }
                    }
                },
                {
                    "title": "כפתור",
                    "id": "buttonElement",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block",
                                "template": {
                                    "name": "כפתור",
                                    "model": "buttonElement",
                                    "buttonText": "לחץ עלי",
                                    "buttonColor": "כחול",
                                    "buttonRadius": "5px",
                                    "buttonTextSize": "16px",
                                    "buttonTextStyle": "מודגש",
                                    "href": "#",
                                    "onclick": "alert('שלום עולם')"
                                }
                            }
                        }
                    }
                },
                {
                    "title": "קרוסלה",
                    "id": "carousel",
                    "plugins": {
                        "xwalk": {
                            "page": {
                                "resourceType": "core/franklin/components/block/v1/block",
                                "template": {
